<h1>Editar platillo</h1>
<%=form_for @dish do |f|%>
	<div class="row">
		<div class="col-lg-2">
			<%=f.label :name,'Nombre'%>
			<%=f.text_field :name,placeholder: @dish.name%>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-2">
			<%=f.label :price,'Precio'%>
			<%=f.text_field :price,placeholder: @dish.price%>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<%=f.submit%>
		</div>
	</div>
<%end%>