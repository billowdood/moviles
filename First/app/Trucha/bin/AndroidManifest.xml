<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trucha"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/trucha"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.trucha.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trucha.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.trucha.activities.CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name="com.trucha.activities.DishesActivity"
            android:label="@string/title_activity_dishes" >
        </activity>
        <activity
            android:name="com.trucha.activities.ShowDishActivity"
            android:label="@string/title_activity_show_dish" >
        </activity>
    </application>

</manifest>
